@model WEB_MANGE_COURCE.Models.Schedule

@{
    ViewBag.Title = "Create Schedule";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create Schedule</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
