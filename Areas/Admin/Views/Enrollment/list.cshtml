@model IEnumerable<WEB_MANGE_COURCE.Models.Enrollment>

@{
    ViewBag.Title = "Enrollment List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Enrollment List</h2>
    <p>
        @Html.ActionLink("Create New", "Index", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Student ID</th>
                <th>Teacher ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cours.course_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Student.student_id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Teacher.teacher_id)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.enm_id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = item.enm_id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.enm_id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>

            }
            </tbody>
</table>
</div>