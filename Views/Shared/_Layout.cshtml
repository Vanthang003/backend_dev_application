    <script src="../assets/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let inputFile = document.querySelector(".inputFile");

        inputFile.addEventListener('change', function (event) {
            console.log("thong tin img: ", event.target.files[0])
            let UrlLink = document.getElementById("output");
            Object.assign(UrlLink.style, {
                height: '100px',
                width: '100px',
                objectFit: 'contain',
                marginTop: "20px",
            })
            UrlLink.src = URL.createObjectURL(event.target.files[0])
        })
    </script>
    @RenderSection("calendarSession", false)
</body>

